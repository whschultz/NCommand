<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Tectil.NCommand</RootNamespace>
    <TargetFramework>net45</TargetFramework>
    <AssemblyTitle>NCommand</AssemblyTitle>
    <Company>Tectil GmbH</Company>
    <Product>NCommand</Product>
    <Description>NCommand is a .NET library to parse command line arguments and map them to commands.</Description>
    <Copyright>$author$</Copyright>
    <Version>0.1.*</Version>
    <AssemblyVersion>0.1.*</AssemblyVersion>
    <FileVersion>0.1.*</FileVersion>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <Authors>Tectil GmbH</Authors>
    <PackageIconUrl>https://github.com/tectil/NCommand/blob/master/Colors.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/tectil/NCommand/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/tectil/NCommand</PackageProjectUrl>
    <PackageTags>Console, Task, Command</PackageTags>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
    <DocumentationFile />
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <DocumentationFile>bin\$(Configuration)\NCommand.XML</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Net.Http" />
  </ItemGroup>
</Project>